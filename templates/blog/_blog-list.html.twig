<div id="blog-list">
    {% for postItem in posts %}
        <div class="post-container">
            <a href="{{ path('post_show', {'slug': postItem.slug}) }}"><h3>{{ postItem.title }}</h3> <p>{{ postItem.publishTime|date("d/m/Y") }}</p></a>
        </div>
    {% endfor %}
    <div class="post-pages">
        {% if pages > 1 %}
            {% for i in 1 .. pages %}
                <a href="{{ path('post_page', {'page': i}) }}">{{ i }}</a>
            {% endfor %}
        {% endif %}
    </div>
</div>